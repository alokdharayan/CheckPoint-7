<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:macro name="standoff" params="name x y z height">
    <link name="${name}">
      <visual>
        <geometry>
          <cylinder radius="0.01" length="${height}"/>
        </geometry>
      </visual>
    </link>

    <joint name="${name}_joint" type="fixed">
      <parent link="base_link"/>
      <child link="${name}"/>
      <origin xyz="${x} ${y} ${z}"/>
    </joint>
  </xacro:macro>

</robot>
